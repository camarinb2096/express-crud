<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User List</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1 class="text-center">List of Users</h1>

  <!-- Tabla para mostrar los usuarios -->
  <table class="user-table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Phone Number</th>
      </tr>
    </thead>
    <tbody>
      <% if (users.length > 0) { %>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.phone_number %></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="3">No users found</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <div class="actions">
    <a href="/api/users/create-user" class="btn btn-primary">Create New User</a>
  </div>
</body>
</html>
